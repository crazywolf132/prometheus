{
  "name": "@local/server",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "module": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "clean": "rm -rf ./dist ./node_modules ./turbo",
    "dev": "yarn nodemon -I --exec node --experimental-specifier-resolution=node --import tsx ./src/index.ts",
    "start": "tsx ./src/index.ts"
  },
  "dependencies": {
    "@local/prometheus": "workspace:*"
  },
  "devDependencies": {
    "@hono/node-server": "1.7.0",
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.10",
    "fs-extra": "^11.2.0",
    "nodemon": "^3.0.3",
    "tsconfig-paths": "^4.2.0",
    "tsup": "^8.0.1",
    "tsx": "^4.7.1",
    "typescript": "^5.3.3",
    "volog": "^1.1.1"
  }
}
